@model IEnumerable<VehiclesMVC.Models.Automobile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
<div class="list-group-item clearfix">
    <div class="pull-left">
        <h4 class="list-group-item-heading"> @Html.DisplayFor(modelItem => item.Year)  @Html.DisplayFor(modelItem => item.Make) @Html.DisplayFor(modelItem => item.Model)</h4>
        <p class="list-group-item-text">@Html.DisplayFor(modelItem => item.VinNumber)</p>
        <p class="list-group-item-text"><b>@Html.ActionLink("View", "Details", new { id = item.ID })</b></p>
        <p class="list-group-item-text">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </p>
    </div>
    <span class="pull-right">
        <img src="@Url.Content(item.ImageURL)" alt="IMAGE" class="img-responsive" style="max-height: 100px;">
    </span>

</div>
}



